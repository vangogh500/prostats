extends ./layouts/main.jade

block scripts
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.1/select.min.js')

block append css
  link(href='http://cdnjs.cloudflare.com/ajax/libs/select2/3.4.5/select2.css', rel='stylesheet')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.1/select.min.css', rel='stylesheet')
  link(href='/css/index.css', rel='stylesheet')

block main-container
  .introduction
    h1 Welcome to LolPro!
    p Intuitive visualization of eSports data right in your hands
  div(id="chart-container" ng-controller='IndexController as ctrl')
    .select-container
      ui-select(ng-model='choice.selected', theme='bootstrap')
        ui-select-match(placeholder="Choose a category...") {{$select.selected.name}}
        ui-select-choices(repeat='c in choices | filter: $select.search')
          div {{c.name}}
          small {{c.detail}}
    scatter-chart(ng-model='data')

block modules
  script(src='js/app.js')

block controllers
  script(src='js/controllers/IndexController.js')

block directives
  script(src='js/directives/scatterchart.js')

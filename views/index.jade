extends ./layouts/main.jade

block scripts
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.min.js')

block append css
  link(href='/css/index.css', rel='stylesheet')

block main-container
  .introduction
    h1 Welcome to LolPro!
    p Intuitive visualization of eSports data right in your hands
  div(id="chart-container" ng-controller='IndexController as ctrl')
    scatter-chart(ng-model='data')
    .team-selector
      h3 LCS Spring Split Teams
      .team(ng-repeat='team in data' ng-class="{even: $even, odd: $odd}")
        .img-container
          img(src="{{team.img}}")
        .info
          span {{team.id}}

block modules
  script(src='js/app.js')

block controllers
  script(src='js/controllers/IndexController.js')

block directives
  script(src='js/directives/scatterchart.js')